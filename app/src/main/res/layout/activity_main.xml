<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/mainActivityLayout" tools:layout_editor_absoluteY="81dp">

    <fragment
            android:name="androidx.navigation.fragment.NavHostFragment"
            app:navGraph="@navigation/nav_graph" app:defaultNavHost="true"
            android:layout_above="@id/bottomNavigationView"
            android:id="@+id/navHostFragment" android:layout_height="match_parent" android:layout_width="match_parent"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/primary"
            app:itemIconTint="@color/icons"
            app:itemTextColor="@color/icons"
            app:menu="@menu/bottom_menu" android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"/>
</RelativeLayout>